  <section>
    <div class="container-fluid">

      <div class="text-center">
        <%= image_tag "logo.png", alt: "NNPC Depot Logo", height: "40"  %>
      </div>

      <div class="login-box">
        <div class="flash-message">
          <% if flash[:notice] %>
            <%= content_tag :span, flash[:notice], class: "notice", id: "puffly" %>
          <% end %>
        </div>
        <div class="login-signin">
          <div class="row">
            <div class="col-12 text-center">
              <h6 class="text-muted text-uppercase">Sign In to start your session</h6>
            </div>
          </div>
          <%= form_tag do |form|%>
            <div class="form-group row">
              <div class="col-12">
                <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Staff ID/Email", required: true, autofocus: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <div class="checkbox checkbox-custom">
                  <input id="checkbox-signup" type="checkbox">
                  <label for="checkbox-signup"> Remember me </label>
                </div>
              </div>
            </div>

            <div class="form-group text-center row mt-2">
              <div class="col-12">
                <%= submit_tag "SIGN IN", :class => "btn btn-block bg-pink waves-effect" %>
              </div>
            </div>

            <div class="form-group row mt-2 mb-0">
              <div class="col-12">
                <a href="#" class="text-muted"><i class="fa fa-lock"></i> Forgot your password?</a>
                <a href="/users/new">Register Now!</a>
              </div>
            </div>
          <% end %>

        </div>

        <div class="clearfix"></div>
      </div>
    </div>
  </section>
