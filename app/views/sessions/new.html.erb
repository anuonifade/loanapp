  <section>
    <div class="login-box">

      <div class="text-center">
        <%= image_tag "logo.png", alt: "NNPC Depot Logo", height: "40", class: "login-logo"  %>
      </div>

      <div class="card">
        <div class="flash-message">
          <% if flash[:notice] %>
            <%= content_tag :span, flash[:notice], class: "notice", id: "puffly" %>
          <% end %>
        </div>
        <div class="login-signin">
          <div class="row">
            <div class="col-12 text-center">
              <h3>Sign In</h3>
            </div>
          </div>
          <%= form_with url: login_path do |form|%>
            <div class="form-group row">
              <div class="col-12">
                <%= form.label :email, 'Staff ID/Email' %>
                <%= form.text_field :email, class: "form-control", placeholder: "Staff ID/Email", required: true, autofocus: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= form.label :password %>
                <%= form.password_field :password, class: "form-control", placeholder: "Password", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <div class="pull-right">
                  <%= link_to password_reset_path, class: "forgot-password label-text" do %><i class="fa fa-lock"></i> Forgot your password?<% end %>
                </div>
                <div class="checkbox checkbox-custom other-fields">
                  <input id="checkbox-signup" type="checkbox">
                  <label for="checkbox-signup"> Remember me </label>
                </div>
              </div>
            </div>

            <div class="form-group text-center row mt-2">
              <div class="col-12">
                <%= form.submit "Login to your Account", :class => "btn btn-block btn-info" %>
              </div>
            </div>

            <div class="form-group row mt-2 mb-0">
              <div class="col-12">
                <a href="/users/new" class="register-now label-text">Register Now!</a>
              </div>
            </div>
          <% end %>
        
        </div>
      </div>
    </div>
  </section>
