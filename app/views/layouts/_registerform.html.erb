  <section>
    <div class="login-box">

      <div class="text-center">
        <%= image_tag "logo.png", alt: "NNPC Depot Logo", height: "40", class: "login-logo"  %>
      </div>

      <div class="card">
        <div class="flash-message">
          <% if flash[:notice] %>
            <%= content_tag :span, flash[:notice], class: "notice", id: "puffly" %>
          <% end %>
        </div>
        <div class="login-signin">
          <div class="row">
            <div class="col-12 text-center">
              <h3>Registration Page</h3>
            </div>
          </div>
          <%= form_with(model: user, local: true) do |form| %>
            <div class="form-group row">
              <div class="col-12">
                <%= label_tag :username, 'Staff ID' %>
                <%= form.text_field :username, id: :username, class: 'form-control', placeholder: 'Staff ID', autofocus:true, required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= label_tag :email, 'Email' %>
                <%= form.text_field :email, id: :user_email, class: 'form-control', placeholder: 'Email' , required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= label_tag :password, 'Password' %>
                <%= form.password_field :password, id: :password, class: "form-control", placeholder: "Password", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= label_tag :password_confirmation, 'Confirm Password' %>
                <%= form.password_field :password_confirmation, id: :password_confirmation, class: 'form-control', placeholder: 'Confirm password', required: true %>
              </div>
            </div>

            <div class="form-group">
              <input type="checkbox" name="terms" id="terms" required>
              <label for="terms">I read and agreed to the <a href="javascript:void(0);">terms of conditions</a>.</label>
            </div>

            <div class="form-group text-center row mt-2">
              <div class="col-12">
                <%= form.submit "Register", :class => "btn btn-block btn-info"%>
              </div>
            </div>

            <div class="m-t-25 align-center">
              <a href="/login" class="label-text register-now">Already Registered? Login now</a>
            </div>
          <% end %>

        </div>

        <div class="clearfix"></div>
      </div>
    </div>
  </section>
