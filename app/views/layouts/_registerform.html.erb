  <section>
    <div class="container-fluid">

      <div class="text-center">
        <%= image_tag "logo.png", alt: "NNPC Depot Logo", height: "40"  %>
      </div>

      <div class="login-box">
        <div class="flash-message">
          <% if flash[:notice] %>
            <%= content_tag :span, flash[:notice], class: "notice", id: "puffly" %>
          <% end %>
        </div>
        <div class="login-signin">
          <div class="row">
            <div class="col-12 text-center">
              <h6 class="text-muted text-uppercase">Register to start applying for loan</h6>
            </div>
          </div>
          <%= form_with(model: user, local: true) do |form| %>
            <div class="form-group row">
              <div class="col-12">
                <%= form.text_field :username, id: :user_username, class: 'form-control', placeholder: 'Staff ID', autofocus:true, required: true%>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= form.text_field :email, id: :user_email, class: 'form-control', placeholder: 'Email' , required: true%>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= password_field_tag :password, params[:password], class: "form-control", placeholder: "Password", required: true %>
              </div>
            </div>

            <div class="form-group row">
              <div class="col-12">
                <%= form.password_field :password_confirmation, id: :user_password_confirmation, class: 'form-control', placeholder: 'Confirm password', required: true %>
              </div>
            </div>

            <div class="form-group">
              <input type="checkbox" name="terms" id="terms" required>
              <label for="terms">I read and agreed to the <a href="javascript:void(0);">terms of conditions</a>.</label>
            </div>

            <div class="form-group text-center row mt-2">
              <div class="col-12">
                <%= form.submit "Register", :class => 'btn btn-block btn-lg bg-pink waves-effect'%>
              </div>
            </div>

            <div class="m-t-25 m-b--5 align-center">
              <a href="/login">You already Registered?</a>
            </div>
          <% end %>

        </div>

        <div class="clearfix"></div>
      </div>
    </div>
  </section>
